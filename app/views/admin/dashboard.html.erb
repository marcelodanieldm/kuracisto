
<h2 class="text-2xl font-bold text-indigo-700 mb-6 flex items-center gap-2">
	<svg class="inline-block text-indigo-500 w-6 h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
	Calendario semanal de turnos
</h2>
<div class="bg-gradient-to-br from-indigo-100 via-purple-100 to-blue-100 rounded-2xl shadow-xl p-6 mb-8">
	<%= week_calendar(events: @turnos, attribute: :fecha, class: "week-calendar") do |turno| %>
		<div class="p-3 mb-2 bg-white rounded-xl shadow flex items-center justify-between animate-fade-in border-l-4 <%= turno.estado == 'reservado' ? 'border-red-400' : 'border-green-400' %>">
			<div class="flex flex-col">
				<span class="font-bold text-base text-gray-700 flex items-center gap-1">
					<svg class="inline-block text-gray-400 w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3" /></svg>
					<%= turno.hora %>
				</span>
				<span class="text-sm text-gray-600 flex items-center gap-1">
					<svg class="inline-block text-green-500 w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.657 6.879 1.804M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
					<%= turno.paciente&.nombre %> <%= turno.paciente&.apellido %>
				</span>
			</div>
			<span class="px-2 py-1 rounded text-xs font-bold <%= turno.estado == 'reservado' ? 'bg-red-200 text-red-700' : 'bg-green-200 text-green-700' %>"><%= turno.estado %></span>
		</div>
	<% end %>
</div>
