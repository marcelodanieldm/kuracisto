<div id="react-dashboard-admin"></div>

<div class="admin-calendar-section">
	<h2>Calendario de Turnos</h2>
	<%= render 'admin/calendar', turnos: @turnos %>
	<% if @turno && @turno.errors.any? %>
		<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4">
			<strong>Error:</strong>
			<ul>
				<% @turno.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
</div>
