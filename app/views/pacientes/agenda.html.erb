
<div class="max-w-4xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6 text-blue-800">Agenda de Turnos Disponibles</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mb-8">
    <% @turnos_disponibles.each do |turno| %>
      <div class="bg-white rounded shadow p-4 flex flex-col justify-between">
        <div>
          <h5 class="text-lg font-semibold text-blue-700 mb-2"><%= turno.medico.email %></h5>
          <p class="text-gray-700 mb-2">
            <span class="font-bold"><%= turno.fecha.strftime("%d/%m/%Y") %></span><br>
            <span class="text-sm text-gray-500"><%= turno.hora.strftime("%H:%M") %> hs</span>
          </p>
        </div>
        <%= link_to "Reservar", reservar_turno_path(turno.id), method: :post, class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm font-semibold transition mt-2" %>
      </div>
    <% end %>
  </div>

  <hr class="my-6">

  <h3 class="text-xl font-semibold mb-4 text-blue-700">Mi historial médico</h3>
  <% if current_user.paciente&.historia_clinica %>
    <%= link_to "Ver historial", historial_medico_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md font-semibold transition" %>
  <% else %>
    <p class="text-gray-600">No tienes historial médico aún.</p>
  <% end %>
</div>